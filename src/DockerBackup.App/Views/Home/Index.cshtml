@{
    ViewData["Title"] = "Home Page";
}

@model List<ContainerVM>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Backups Enabled?</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var container in Model)
            {
                <tr>
                    <td>@container.Id</td>
                    <td>@container.Name</td>
                    <td>@container.Image</td>
                    <td>No</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>